<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">View User</li>
    </ol>
</nav>

<div class="view-user p-5">
    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h3>{{this.first_name}} {{this.last_name}}</h3>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="row">First Name</th>
                        <th scope="row">Last Name</th>
                        <th scope="row">Email</th>
                        <th scope="row">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">{{ this.first_name }}</td>
                        <td scope="row">{{ this.last_name }}</td>
                        <td scope="row">{{ this.email }}</td>
                        <td scope="row">{{ this.phone }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col"><b>Comments</b>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{this.comments}}
            </div>
        </div>
    </div>
    {{/each}}
</div>