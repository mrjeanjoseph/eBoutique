@model KwiqBlog.Models.AdminViewModels.IndexViewModel

<div class="container-fluid">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        @foreach (var p in Model.Posts){
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/UserFiles/Posts/@p.Id/HeaderImg.png" class="card-img-top" />
                    <div class="card-body">
                        <div class="row" style="margin: 0px auto 10px 0px;">
                            <div><h5 class="card-title mb-0">@p.Title</h5></div>
                            <div class="ml-auto mr-3">
                                <i class="fas @(p.Published ? "fa-eye" : "fa-eye-slash")" style="color: @(p.Published ? "deepskyblue" : "orangered")"></i>
                            </div>
                        </div>
                        <div class="ml-0">
                            <div><i class="fas fa-calendar-alt" style="color: gray"></i></div>
                            <p class="text-muted ml-3 mb-0">Last updated on: @p.UpdatedDate.ToString()</p>
                        </div>
                        <div class="ml-0" style="bottom: 0;">
                            <div><i class="fas fa-comment" style="color: gray"></i></div>
                            <p class="text-muted ml-3 mb-0">@p.Comments.Count() comments</p>
                        </div>                        
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <a asp-controller="Home" asp-action="Post" asp-route-id="@p.Id" class="btn btn-primary">
                                    <i class="fa fa-arrow-circle-right"></i> View
                                </a>
                            </div>
                            <div class="col">
                                <a asp-controller="Post" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-secondary float-right">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>