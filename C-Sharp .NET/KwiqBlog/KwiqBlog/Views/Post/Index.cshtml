@model KwiqBlog.Models.PostViewModels.PostViewModel

@{
    Layout = "_ReadLayout";
    ViewData["HeaderImg"] = $"../../UserFiles/Posts/{Model.Post.Id}/HeaderImg.png";
    ViewData["HeaderTitle"] = Model.Post.Title;
    ViewData["AuthorName"] = $"{Model.Post.PostCreator.FirstName} {Model.Post.PostCreator.LastName}";
    ViewData["PostDate"] = Model.Post.UpdatedDate.ToString("MMM d, yyyy");
}

<article>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Post.Content)
            </div>
        </div>
    </div>
     
</article>