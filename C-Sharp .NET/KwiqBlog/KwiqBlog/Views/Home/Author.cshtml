@model KwiqBlog.Models.HomeViewModels.AuthorViewModel
@using PagedList.Core.Mvc
@{
    Layout = "_HomeLayout";
    ViewData["HeaderImg"] = $"../../UserFiles/Users/{Model.Author.Id}/HeaderImg.png";
    ViewData["HeaderTitle"] = $"{Model.Author.FirstName} {Model.Author.LastName}";
    ViewData["SubHeader"] = Model.Author.SubHeader;
}

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Author.AboutContent)
            </div>
        </div>
        <div class="row col-lg-8 col-md-10 mx-auto">
            <form asp-controller="Home" asp-action="AboutAuthor" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                <div class="input-group mb-3">
                    <input name="AuthorId" hidden readonly value="@Model.Author.Id" />
                    <input type="text" asp-for="SearchString" class="form-control" placeholder="Search posts for...+" />
                    <div class="input-group-append"><button class="btn btn-outline-primary" style="padding: 0 10px 0 10px;">Search</button></div>
                </div>
            </form>

            <div class="row align-content-center">
                @foreach (var p in Model.Posts) {
                    <div class="col-lg-4 col-md-3 mb-4">
                        <div class="card border-0 shadow">
                            <img src="~/UserFiles/Posts/@p.Id/HeaderImg.png" alt="Post Image" class="card-img-top" />

                            <div class="card-body">
                                <div class="row text-center" style="margin: 0px auto 10px 0px;">
                                    <h5 class="card-title text-center w-100">
                                        <a asp-controller="Post" asp-action="Index" asp-route-id="@p.Id">@p.Title</a>
                                    </h5>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>

            <pager class="pager-container"
                   list="@Model.Posts"
                   options="@PagedListRenderOptions.Bootstrap4PageNumbersPlusFirstAndLast"
                   asp-action="Index"
                   asp-controller="Home"
                   asp-route-query="@Model.SearchString" />
        </div>
    </div>
</article>