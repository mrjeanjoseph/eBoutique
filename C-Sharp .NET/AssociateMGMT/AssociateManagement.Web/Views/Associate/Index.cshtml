
@{
    ViewBag.Title = "Associate List";
}

<h2>Associate Record Management</h2>

<button type="button" class="btn btn-outline-success mb-3" onclick="PopupForm('@Url.Action("AddOrEdit", "Associate")');">
    <i class="fa fa-plus" aria-hidden="true"></i>
    Add New Record
</button>
<table id="associateTable" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Position</th>
            <th>Office Location</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>


<link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

@section scripts{
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        var Popup, dataTable;

        $(document).ready(function () {

            datatable = $("#associateTable").DataTable({

                "ajax": {
                    "url": "/Associate/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "FullName" },
                    { "data": "Position" },
                    { "data": "OfficeLocation" },
                    { "data": "Age" },
                    { "data": "Salary" },
                    {
                        "data": "EmployeeID",
                        "render": function (data) {
                            return `
                                <a class="btn btn-outline-secondary btn-sm"
                                onclick=PopupForm('@Url.Action("AddOrEdit", "Associate")/${data}')>
                                    Edit <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" onclick=Delete(${data})>
                                    Delete <i class="fas fa-trash"></i>
                                </a>`;
                        },
                        "width": "150px", "targets": 0, "orderable": false, "searchable":false
                    },
                ],
                "language": {
                    "emptyTable": 'No record found! Please <b>Add New</b> record to be displayed'
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                //Something happened here - We're getting a 500 response error
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Fill Employee Details',
                    height: 500,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobstrusive.parse(form);

            if ($(form).valid()) {

                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            //dataTable.ajax.reload();

                            //Popup notification on success
                            $.notify(data.message, {
                                globalPosition: "top-center",
                                className: "success"
                            });

                            window.location.reload();
                        }
                    }
                });

            }
            return false;
        }

        function Delete(id) {
            if (confirm("Are you sure - Kinga?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Associate")/' + id,
                    success: function (data) {

                        //dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center", className: "danger"
                        });


                        window.location.reload();
                    }
                });
            }
        }
    </script>
}