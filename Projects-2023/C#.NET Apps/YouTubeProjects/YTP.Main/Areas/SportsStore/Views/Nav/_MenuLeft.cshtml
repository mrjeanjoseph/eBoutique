@model IEnumerable<string>



@Html.ActionLink("Principal", "ListProducts", "Product", new { Area = "SportsStore" },
    new { @class = "btn btn-outline-secondary btn-lg mb-4" })

@foreach (var link in Model) {
    @Html.RouteLink(link, new {
    controller = "Product",
    action = "ListProducts",
    category = link,
    page = 1
    }, new {
        @class = "btn btn-outline-secondary btn-lg mb-3"
        + (link == ViewBag.SelectedCategory ? " btn-secondary text-white" : "")
    })
}