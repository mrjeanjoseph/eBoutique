@model YTP.Domain.SportsStore.Entities.ShippingDetails

@{
    ViewBag.Title = "Pwodwi Lakay: Checkout";
}

<h2>Peye pou machandiz la!</h2>
<p>Bay lajan an epwi, nap voye machandiz la ba ou</p>



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal g-3 align-items-center">
        <h4>Ship to:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Address</h3>

        @foreach (var property in ViewData.ModelMetadata.Properties) {

            if (property.PropertyName != "CustomerName" && property.PropertyName != "GiftWrap") {

                <div class="form-group row mb-3">
                    <label class="col-form-label col-md-2">@(property.DisplayName ?? property.PropertyName)</label>
                    <div class="col-md-10">
                        @Html.TextBox(property.PropertyName, null, new {@class = "form-control"})
                    </div>
                </div>
            }
        }


        <h3>Option</h3>
        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.GiftWrap, htmlAttributes: new { @class = " col-form-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.GiftWrap)
                    @Html.ValidationMessageFor(model => model.GiftWrap, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Complete Order" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
}

