@model YTP.Main.Models.Product


@{
    ViewBag.Title = "DemoExpresssion";
    Layout = "~/Areas/SandboxTBP/Views/Shared/_Layout.cshtml";
    ViewBag.ProductCount = 2;
}

<h2>DemoExpresssion</h2>

<table>
    <thead>
        <tr><th>Property</th><th>Value</th></tr>
    </thead>
    <tbody>
        <tr><td>Name:</td><td>@Model.Name</td></tr>
        <tr><td>Price:</td><td>@Model.ProductPrice</td></tr>
        <tr><td>Stock Level:</td><td>@ViewBag.ProductCount</td></tr>

        <tr><td>Using</td><td>Switch Statement</td></tr>
        <tr>
            <td>Stock Level:</td>
            <td>
                @switch ((int)ViewBag.ProductCount) {
                    case 0:
                        @: Out of Stock
                        break;
                    case 2:
                        @: <b>Low Stock (@ViewBag.ProductCount)</b>
                        break;
                    default:
                        @ViewBag.ProductCount
                        break;
                }
            </td>
        </tr>

        <tr><td>Using</td><td>If Statement</td></tr>
        <tr>
            <td>Stock Level:</td>
            <td>
                @if (ViewBag.ProductCount == 0) {
                    @: Product out of stock
                } else if (ViewBag.ProductCount == 2) {
                    @: <b>Low Stock - (@ViewBag.ProductCount)</b>
                } else {
                    @ViewBag.ProductCount
                }
            </td>
        </tr>
    </tbody>
</table>


<div data-discount="@ViewBag.ApplyDiscount" data-express="@ViewBag.ExpressShip" data-supplier="@ViewBag.Supplier">
    The containing element has data attributes
</div>

Discount:
<input type="checkbox" checked="@ViewBag.ApplyDiscount" />
Express:
<input type="checkbox" checked="@ViewBag.ExpressShip" />
Supplier:
<input type="checkbox" checked="@ViewBag.Supplier" />