@model IEnumerable<string>

<div data-role="navbar">
    <ul>
        @foreach (var link in Model) {
            <li>
                @Html.RouteLink(link, new {
                   controller = "Product",
                   action = "ListProducts",
                   category = link,
                   page = 1
                }, new {
                   @class = (link == ViewBag.SelectedCategory ? "ui-btn-active" : null)
                })
            </li>
         }
    </ul>
</div>