@model YTP.Main.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>

    @{try {
            WebMail.SmtpServer = "smtp.office365.com";
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = ViewBag.username;
            WebMail.Password = ViewBag.password;
            WebMail.From = ViewBag.username;

            WebMail.Send(Model.EmailAddress, "RSVP Notification", Model.RSVP_Name + " is " + ((Model.WillAttend ?? false) ? "" : "not") + "attending");
        } catch (Exception) {
            @: <b>Sorry - We couldn't send the email to confirm your RSVP.</b>
        }
    }
    <div>
        <h1>Thank you, @Model.RSVP_Name!</h1>
        @if (Model.WillAttend == true) {
            @: It's great that you're coming. The booze are already in the fridge!
        } else {
            @: It sucks you're unable to make it. Well, more beer for me!
        }
    </div>

    @Html.ActionLink("Back to Main", "Index", "Home")
</body>
</html>
