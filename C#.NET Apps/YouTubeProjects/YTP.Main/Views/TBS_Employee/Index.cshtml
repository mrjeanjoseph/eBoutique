@{ ViewBag.Title = "TBS Employees"; }

<h2>Employee Details</h2>

<a href="/" class="btn btn-primary mb-3">Add New</a>
<table id="employeeTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Position</th>
            <th>Office Loc</th>
            <th>Age</th>
            <th>Salary</th>
        </tr>
    </thead>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable({
                "ajax": {
                    "url": "/TBS_Employee/GetData",
                    "type": "GET",
                    "datatype" : "json"
                },
                "columns": [
                    {"data" : "FullName"},
                    {"data" : "Position"},
                    {"data" : "OfficeLoc"},
                    {"data" : "Age"},
                    {"data" : "Salary"}
                ]
            })
        });
    </script>
}